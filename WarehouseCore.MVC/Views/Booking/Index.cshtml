@{
    ViewBag.Title = "Danh sách Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Danh sách Booking</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <a class="btn btn-success" style="margin-bottom:10px;" onclick="PopupForm('@Url.Action("AddOrEdit","Booking")')"><i class="fa fa-plus"></i> Thêm mới</a>
            <form id="fileUploadForm" style="display: inline">
                <input type="file" name="file" id="file" style="margin-left: 10px" accept=".pdf" />
                <input id="btnSubmit" type="button" value="Import Excel" class="btn btn-primary" />
            </form>
            <a class="btn btn-warning" onclick=""> In CLP</a>
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th class="select-checkbox"></th>
                        <th></th>
                        <th>Shipment</th>
                        <th>Consol</th>
                        <th>Shipper</th>
                        <th>Consignee</th>
                        <th>Pallet</th>
                        <th>In</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<link rel="stylesheet"  href="https://cdn.datatables.net/select/1.3.1/css/select.dataTables.min.css">
@section scripts{
    <script src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js"></script>
    <script>
        var Popup, dataTable;
        function format(d) {
            // `d` is the original data object for the row
            return '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;">' +
                '<th>Pkg</th>' +
                '<th>Unit</th>' +
                '<th>Gross Weight</th>' +
                '<th>Actual CBM</th>' +
                '<th>Số nhận hàng</th>' +
                '<th>Destination</th>' +
                '<th>Số xe</th>' +
                '<th>Số Seal</th>' +
                '<th>Ngày tạo</th>' +
                '<th>ETD</th>' +
                '<tr>' +
                '<td>' + d.Pkg + '</td>' +
                '<td>' + d.Unit + '</td>' +
                '<td>' + d.GWeight + '</td>' +
                '<td>' + d.ActualCBM + '</td>' +
                '<td>' + d.CargoReceiptNumber + '</td>' +
                '<td>' + d.Destination + '</td>' +
                '<td>' + d.TruckNo + '</td>' +
                '<td>' + d.SealNo + '</td>' +
                '<td>' + d.datetext + '</td>' +
                '<td>' + d.ETDtext + '</td>' +
                '</tr>' +
                '</table>';
        }

        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "/Booking/GetBooking",
                    "type": "GET",
                    "datatype": "json",
                },
                "select": {
                    "style": 'os',
                    "selector": 'td:first-child'
                },
                "columns": [
                    {
                        "className": 'select-checkbox',
                        "orderable": false,
                        "targets": 0,
                        "bSortable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    {
                        "className": 'details-control',
                        "orderable": false,
                        "targets": 0,
                        "bSortable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    { "data": "Shipment" },
                    { "data": "Consol" },
                    { "data": "Shipper" },
                    { "data": "Consignee" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-info-circle f-20 text-success' onclick=Detail('" + data + "')><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-print f-20 text-success' onclick=Print('" + data + "')><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-pencil f-18 text-success' onclick=PopupForm('@Url.Action("AddOrEdit", "Booking")/" + data + "')><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
            $('#truckTable tbody').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = dataTable.row(tr);

                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    // Open this row
                    row.child(format(row.data())).show();
                    tr.addClass('shown');
                }
            });
        });

        $('#btnSubmit').click(function () {
            var formData = new FormData();
            formData.append('file', $('#file')[0].files[0]);
            $.ajax({
                url: '/Booking/UploadBooking',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "success"
                        })
                    }
                    else {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "success"
                        })
                    }
                },
                error: function (data) {
                    dataTable.ajax.reload();
                    $.notify(data.message, {
                        globalBooking: "top center",
                        className: "error"
                    })

                }
            });
        });

        function Print(id) {
            $.ajax({
                type: "GET",
                url: "/Booking/PrintPNK?id=" + id,
                contentType: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
                xhrFields: { responseType: 'blob' },
                success: function (data) {
                    var a = document.createElement('a');
                    var url = window.URL.createObjectURL(data);
                    a.href = url;
                    a.download = 'PNK.xlsx';
                    a.click();
                    window.URL.revokeObjectURL(url);
                }
            });
            return false;
        }

        function PopupForm(url) {
            var formDiv = $('<div />');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: 'Nhập thông tin Booking',
                    height: 650,
                    width: 800,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function Detail(id) {
            window.location.href = "/Booking/BookingDetail?bookingid=" + id;
        }

        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "success"
                        })
                    }
                    else {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "error"
                        })
                    }
                }
            });
            return false;
        }

        function Delete(id) {
            if (confirm("Bạn có muốn xóa Booking này không?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Booking")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalBooking: "top center",
                                className: "success"
                            })
                        }
                        else {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalBooking: "top center",
                                className: "failure"
                            })
                        }
                    }
                });
            }
        }
    </script>
}