@model WarehouseCore.MVC.Models.POs
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "PO", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Số PO/SO</label>
        @Html.EditorFor(model => model.POSO, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Đơn vị tính</label>
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số lượng</label>
        @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <label class="control-label">Kích thước</label>
        @Html.EditorFor(model => model.Dimension, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">CBM</label>
        @Html.EditorFor(model => model.CBM, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Gross Weight</label>
        @Html.EditorFor(model => model.GWeight, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Vị trí</label>
        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}