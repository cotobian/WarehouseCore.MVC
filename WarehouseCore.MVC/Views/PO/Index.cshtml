@model WarehouseCore.MVC.Models.Booking
@{
    ViewBag.Title = "Booking Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3>Booking Details</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 col-lg-2 label">
                    <strong>Shipment:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Shipment
                </div>
                <div class="col-md-2 col-lg-2 label">
                    <strong>Consol:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Consol
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 label">
                    <strong>Shipper:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Shipper
                </div>
                <div class="col-md-2 col-lg-2 label">
                    <strong>Consignee:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Consignee
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 label">
                    <strong>Destination:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Destination
                </div>
                <div class="col-md-2 col-lg-2 label">
                    <strong>Gross Weight:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.GWeight
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 label">
                    <strong>Actual CBM:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.ActualCBM
                </div>
                <div class="col-md-2 col-lg-2 label">
                    <strong>Cargo Receipt Number:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.CargoReceiptNumber
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 label">
                    <strong>Remark:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Remark
                </div>
                <div class="col-md-2 col-lg-2 label">
                    <strong>Date:</strong>
                </div>
                <div class="col-md-4 col-lg-4 label">
                    @Model.Date
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3>PO List</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <a class="btn btn-success" style="margin-bottom:10px;" onclick="AddNewPopUp()"><i class="fa fa-plus"></i> Thêm mới</a>
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>PO/SO</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Dimension</th>
                        <th>CBM</th>
                        <th>G.Weight</th>
                        <th>Vị trí</th>
                        <th>In</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            let url = "/PO/GetPOByBooking?Id=" + @Model.Id;
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": url,
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "POSO" },
                    { "data": "Quantity" },
                    { "data": "Unit" },
                    { "data": "Dimension" },
                    { "data": "CBM" },
                    { "data": "GWeight" },
                    { "data": "PositionName" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-pencil f-18 text-success' onclick=Print(" + data + ")><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-pencil f-18 text-success' onclick=EditPopUp(" + data + ")><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
        });

        function AddNewPopUp() {
            let url = "/PO/AddOrEdit?bookingid=" + @Model.Id;
            PopupForm(url);
        }

        function EditPopUp(id) {
            let url = "/PO/AddOrEdit?bookingid=" + @Model.Id + "&id=" + id;
            PopupForm(url);
        }

        function Print(id) {
            $.ajax({
                type: "GET",
                url: "/PO/PrintPalletSheet?id=" + id,
                contentType: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
                xhrFields: { responseType: 'blob' },
                success: function (data) {
                    var a = document.createElement('a');
                    var url = window.URL.createObjectURL(data);
                    a.href = url;
                    a.download = 'PalletSheet.xlsx';
                    a.click();
                    window.URL.revokeObjectURL(url);
                }
            });
            return false;
        }

        function PopupForm(url) {
            var formDiv = $('<div />');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: 'Nhập thông tin PO',
                    height: 480,
                    width: 600,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "success"
                        })
                    }
                }
            });
            return false;
        }

        function Delete(id) {
            if (confirm("Bạn có muốn xóa PO này không?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "PO")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalBooking: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }
    </script>
}