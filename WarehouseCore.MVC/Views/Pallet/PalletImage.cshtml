@{
    Layout = null;
}
<script src="~/Scripts/jquery-2.0.0.min.js"></script>
<style>
    .carousel {
        width: 100%;
        height: 400px;
        position: relative;
        overflow: hidden;
    }

    .slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 400px;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

        .slide.active {
            opacity: 1;
        }

    .prev,
    .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        padding: 10px 20px;
        border: none;
        background-color: #fff;
        color: #333;
        font-size: 16px;
        cursor: pointer;
    }

    .prev {
        left: 0;
    }

    .next {
        right: 0;
    }

</style>

<div class="carousel">
    <div class="slide"><img src="~/PalletImages/1.png"></div>
    <div class="slide"><img src="~/PalletImages/2.png"></div>
    <div class="slide"><img src="~/PalletImages/3.png"></div>
    <button class="prev">Prev</button>
    <button class="next">Next</button>

</div>

<script>
    $(document).ready(function () {
        var slideIndex = 0;
        var slides = $(".slide");

        function showSlides() {
            slides.removeClass("active");
            slides.eq(slideIndex).addClass("active");
            slideIndex++;
            if (slideIndex >= slides.length) {
                slideIndex = 0;
            }
            setTimeout(showSlides, 5000);
        }

        showSlides();

        $(".next").click(function () {
            slides.removeClass("active");
            slideIndex++;
            if (slideIndex >= slides.length) {
                slideIndex = 0;
            }
            slides.eq(slideIndex).addClass("active");
        });

        $(".prev").click(function () {
            slides.removeClass("active");
            slideIndex--;
            if (slideIndex < 0) {
                slideIndex = slides.length - 1;
            }
            slides.eq(slideIndex).addClass("active");
        });
    });
</script>