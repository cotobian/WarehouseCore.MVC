@{
    Layout = null;
}

<div class="row">
    <div id="palletCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                <li data-target="#palletCarousel" data-slide-to="@i"></li>
            }
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/PalletImages/@Model[0].FileName">
            </div>

            @for (int i = 1; i < Model.Count; i++)
            {
                <div class="item">
                    <img src="~/PalletImages/@Model[i].FileName">
                </div>
            }
        </div>

        <a class="left carousel-control" href="#palletCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#palletCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>