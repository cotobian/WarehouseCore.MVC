@{
    ViewBag.Title = "Báo cáo Tồn kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Báo cáo Tồn kho</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Shipment</th>
                        <th>Số PO</th>
                        <th>Đơn vị</th>
                        <th>Vị trí</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "/Report/GetInventoryReport",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "Shipment" },
                    { "data": "POSO" },
                    { "data": "Unit" },
                    { "data": "PositionName" },
                    { "data": "Quantity" }
                ]
            });
        });
    </script>
}