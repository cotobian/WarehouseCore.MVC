@model WarehouseCore.MVC.Models.Role
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Role", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên Phân quyền</label>
        @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tên viết tắt</label>
        @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}