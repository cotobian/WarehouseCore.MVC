@model WarehouseCore.MVC.Models.Booking
@{
    ViewBag.Title = "Booking Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3>Booking Details</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 col-lg-2 form-control">
                    Shipment:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Shipment
                </div>
                <div class="col-md-2 col-lg-2 form-control">
                    Consol: 
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Consol
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 form-control">
                    Shipper:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Shipper
                </div>
                <div class="col-md-2 col-lg-2 form-control">
                    Consignee:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Consignee
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 form-control">
                    Destination:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Destination
                </div>
                <div class="col-md-2 col-lg-2 form-control">
                    Gross Weight:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.GWeight
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 form-control">
                    Actual CBM:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.ActualCBM
                </div>
                <div class="col-md-2 col-lg-2 form-control">
                    Cargo Receipt Number:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.CargoReceiptNumber
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 col-lg-2 form-control">
                    Remark:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Remark
                </div>
                <div class="col-md-2 col-lg-2 form-control">
                    Date:
                </div>
                <div class="col-md-4 col-lg-4 form-control">
                    @Model.Date
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3>Danh sách PO</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <a class="btn btn-success" style="margin-bottom:10px;" onclick="PopupForm('@Url.Action("AddOrEdit","Booking")')"><i class="fa fa-plus"></i> Thêm mới</a>
            <form id="fileUploadForm" style="display: inline">
                <input type="file" name="file" id="file" style="margin-left: 10px" accept=".pdf" />
                <input id="btnSubmit" type="button" value="Import Excel" class="btn btn-primary" />
            </form>
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>PO/SO</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Dimension</th>
                        <th>CBM</th>
                        <th>Pkg</th>
                        <th>G.Weight</th>
                        <th>Vị trí</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "/Booking/GetBooking",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "POSO" },
                    { "data": "Quantity" },
                    { "data": "Unit" },
                    { "data": "Dimension" },
                    { "data": "CBM" },
                    { "data": "Pkg" },
                    { "data": "Unit" },
                    { "data": "GWeight" },
                    { "data": "PositionName" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-pencil f-18 text-success' onclick=PopupForm('@Url.Action("AddOrEdit", "Booking")/" + data + "')><i />";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
        });

        $('#btnSubmit').click(function () {
            var formData = new FormData();
            formData.append('file', $('#file')[0].files[0]);

            $.ajax({
                url: '/Booking/UploadBooking',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {

                },
                error: function (xhr, status, error) {

                }
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div />');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: 'Nhập thông tin Booking',
                    height: 600,
                    width: 800,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalBooking: "top center",
                            className: "success"
                        })
                    }
                }
            });
            return false;
        }

        function Delete(id) {
            if (confirm("Bạn có muốn xóa Booking này không?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Booking")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalBooking: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
        }
    </script>
}