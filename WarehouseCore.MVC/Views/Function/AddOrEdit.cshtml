@model WarehouseCore.MVC.Models.Function
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Function", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên Chức năng</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Url</label>
        @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Icon</label>
        @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Thứ tự hiển thị</label>
        @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}